

@model ECommerce_WebApp.Entities.Product
<!--Made by Arjun-->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img class="product-image2" src="@(Model?.ProdImage ?? "default.jpg")" alt="@Model?.ProdName" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-3">@Model?.ProdName</h1>
            <p class="text-muted">Category: @(Model?.Category?.CategoryName ?? "No Category")</p>
            <p>@Model?.ProdDescription</p>
            <h3 class="text-primary">$@(Model?.ProdPrice ?? 0.0m)</h3>
            <div class="mt-4">
                <form method="post" action="/Cart/AddToCart">
                    <input type="hidden" name="productId" value="@Model?.ProdId" />
                    <input type="number" name="quantity" value="1" min="1" class="form-control" />
                    <button type="submit" class="btn btn-success mt-2">Add to Cart</button>
                </form>
            </div>
            <div class="mt-3">
                <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>

    <!-- Specifications -->
    <div class="row mt-5">
        <div class="col-12">
            <h4>Specifications</h4>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Brand</th>
                        <td>@Model?.Brand</td>
                    </tr>
                    <tr>
                        <th>Dimensions</th>
                        <td>@Model?.Dimensions</td>
                    </tr>
                    <tr>
                        <th>Weight</th>
                        <td>@Model?.Weight</td>
                    </tr>
                    <tr>
                        <th>Warranty</th>
                        <td>@Model?.Warranty</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
