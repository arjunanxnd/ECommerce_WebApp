@model ECommerce_WebApp.Entities.Product

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid" src="~/images/products/@(Model?.ProdImage ?? "default.jpg")" alt="@Model?.ProdName" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-3">@Model?.ProdName</h1>
            <p class="text-muted">Category: @(Model?.Category?.CategoryName ?? "No Category")</p>
            <p>@Model?.ProdDescription</p>
            <h3 class="text-primary">$@(Model?.ProdPrice ?? 0.0m)</h3>
            <div class="mt-4">
                <form method="post" action="/Cart/AddToCart">
                    <input type="hidden" name="productId" value="@Model?.ProdId" />
                    <button type="submit" class="btn btn-success">Add to Cart</button>
                </form>
            </div>
            <div class="mt-3">
                <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
