@model ECommerce_WebApp.Operations.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Featured Categories -->
<div class="container mt-5">
    <h2 class="text-center">Shop by Category</h2>
    <div class="row">
        @foreach (var category in Model.FeaturedCategories)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <a href="@Url.Action("ListByCategory", "Product", new { categoryId = category.CategoryId })">
                        @* <img src="~/images/categories/@(category.CategoryImage ?? "default_category.jpg")" class="card-img-top" alt="@category.CategoryName"> *@
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.CategoryName</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Featured Products -->
<div class="container mt-5">
    <h2 class="text-center">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/products/@(product.ProdImage ?? "default.jpg")" class="card-img-top" alt="@product.ProdName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProdName</h5>
                        <p class="card-text">@product.ProdDescription</p>
                        <div class="mt-auto">
                            <span class="text-primary font-weight-bold">$@product.ProdPrice.ToString("F2")</span>
                            <a href="@Url.Action("ProductDetails", "Product", new { id = product.ProdId })" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Best Sellers -->
<div class="container mt-5">
    <h2 class="text-center">Best Sellers</h2>
    <div class="row">
        @foreach (var product in Model.BestSellers)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/products/@(product.ProdImage ?? "default.jpg")" class="card-img-top" alt="@product.ProdName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProdName</h5>
                        <p class="card-text">@product.ProdDescription</p>
                        <div class="mt-auto">
                            <span class="text-primary font-weight-bold">$@product.ProdPrice.ToString("F2")</span>
                            <a href="@Url.Action("ProductDetails", "Product", new { id = product.ProdId })" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Recommendations -->
@if (Model.Recommendations.Any())
{
    <div class="container mt-5">
        <h2 class="text-center">Recommended for You</h2>
        <div class="row">
            @foreach (var product in Model.Recommendations)
            {
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/products/@(product.ProdImage ?? "default.jpg")" class="card-img-top" alt="@product.ProdName">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.ProdName</h5>
                            <p class="card-text">@product.ProdDescription</p>
                            <div class="mt-auto">
                                <span class="text-primary font-weight-bold">$@product.ProdPrice.ToString("F2")</span>
                                <a href="@Url.Action("ProductDetails", "Product", new { id = product.ProdId })" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
